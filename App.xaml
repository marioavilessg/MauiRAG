<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RagMaui.App">

    <Application.Resources>
        <ResourceDictionary>
            <!-- Core Colors -->
            <Color x:Key="AppBackground">#121212</Color>
            <Color x:Key="Surface">#1E1E1E</Color>
            <Color x:Key="SurfaceLight">#2C2C2C</Color>
            <Color x:Key="PrimaryAccent">#00A86B</Color>
            <Color x:Key="TextPrimary">#FFFFFF</Color>
            <Color x:Key="TextSecondary">#ABABAB</Color>
            <Color x:Key="BorderColor">#333333</Color>

        </ResourceDictionary>
    </Application.Resources>

</Application>