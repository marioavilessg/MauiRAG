<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:RagMaui.Helpers"
    x:Class="RagMaui.MainPage">

    <ContentPage.Resources>
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- ================= HEADER ================= -->

            <HorizontalStackLayout>
                <Label Text="Workspace activo:"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />

                <Label Text="{Binding SelectedWorkspace.Name}"
                       Margin="10,0,0,0"
                       VerticalOptions="Center" />

                <Button Text="⚙"
                        HorizontalOptions="EndAndExpand"
                        Clicked="OnOpenSettingsClicked" />
            </HorizontalStackLayout>

            <!-- ================= MODO ================= -->

            <HorizontalStackLayout>
                <Label Text="Modo Chat"
                       VerticalOptions="Center" />
                <Switch IsToggled="{Binding IsChatMode}" />
            </HorizontalStackLayout>

            <!-- ================= CHAT ================= -->

            <CollectionView ItemsSource="{Binding Messages}"
                            IsVisible="{Binding IsChatMode}"
                            HeightRequest="300">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" BackgroundColor="#2a2a2a">
                            <VerticalStackLayout>
                                <Label Text="{Binding Role}"
                                       FontAttributes="Bold"
                                       FontSize="12"/>
                                <Label Text="{Binding Content}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- ================= QUERY ================= -->

            <Label Text="{Binding Response}"
                   IsVisible="{Binding IsChatMode, Converter={StaticResource InverseBoolConverter}}"
                   Margin="0,10,0,0"/>

            <!-- ================= INPUT ================= -->

            <Entry Placeholder="Escribe tu pregunta"
                   Text="{Binding Question}" />

            <Button Text="Preguntar"
                    Command="{Binding AskCommand}" />

            <!-- ================= SOURCES ================= -->

            <CollectionView ItemsSource="{Binding Sources}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding title}" FontAttributes="Bold"/>
                                <Label Text="{Binding score, StringFormat='Score: {0:F2}'}"/>
                                <Label Text="{Binding text}" FontSize="12"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>